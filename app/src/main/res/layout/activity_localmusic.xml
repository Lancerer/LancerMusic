<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lancer.lancermusic.activity.localmusicActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_localactivity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/biliPink"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <android.support.design.widget.TabLayout
        android:layout_below="@+id/toolbar_localactivity"
        android:id="@+id/tab_localactivity"
        android:layout_width="match_parent"
        android:background="@color/biliPink"
        android:layout_height="40dp" />

    <com.example.lancer.lancermusic.view.MyViewPager
        android:id="@+id/myviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/fragment_playbar"
        android:layout_below="@id/tab_localactivity" />

    <FrameLayout
        android:id="@+id/fragment_playbar"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
